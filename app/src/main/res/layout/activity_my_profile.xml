<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileActivity">

    <ImageView
        android:id="@+id/iv_myProfile_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_myProfile_nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/tv_myProfile_nameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_myProfile_picture" />

    <TextView
        android:id="@+id/tv_myProfile_emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/tv_myProfile_emailLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_myProfile_nameLabel"
        app:layout_constraintTop_toBottomOf="@+id/tv_myProfile_nameLabel" />

    <TextView
        android:id="@+id/tv_myProfile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        tools:text="Amotz Levi"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myProfile_nameLabel"
        app:layout_constraintStart_toEndOf="@+id/tv_myProfile_nameLabel"
        app:layout_constraintTop_toTopOf="@+id/tv_myProfile_nameLabel" />

    <TextView
        android:id="@+id/tv_myProfile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="dankovals@gmail.com"
        app:layout_constraintBottom_toBottomOf="@+id/tv_myProfile_emailLabel"
        app:layout_constraintStart_toStartOf="@+id/tv_myProfile_name"
        app:layout_constraintTop_toTopOf="@+id/tv_myProfile_emailLabel" />
</android.support.constraint.ConstraintLayout>